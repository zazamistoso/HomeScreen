<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/homescreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/calculator"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="50dp"
                    android:background="#00FFFFFF"
                    android:contentDescription="calculator"
                    android:scaleType="fitCenter"
                    android:src="@drawable/calculator" />

                <ImageButton
                    android:id="@+id/clock"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/calculator"
                    android:background="#00FFFFFF"
                    android:contentDescription="clock"
                    android:scaleType="fitCenter"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calculator"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:text="Calculator"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clock"
                    android:layout_marginLeft="78dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/text1"
                    android:text="Clock"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/camera"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/text1"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:background="#00FFFFFF"
                    android:contentDescription="camera"
                    android:scaleType="fitCenter"
                    android:src="@drawable/camera" />

                <ImageButton
                    android:id="@+id/settings"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/text2"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/camera"
                    android:background="#00FFFFFF"
                    android:contentDescription="camera"
                    android:scaleType="fitCenter"
                    android:src="@drawable/settings" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/camera"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="76dp"
                    android:text="Camera"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/text3"

                    android:text="Settings"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/speech"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/text3"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:background="#00FFFFFF"
                    android:contentDescription="messages"
                    android:scaleType="fitCenter"
                    android:src="@drawable/speech" />

                <ImageButton
                    android:id="@+id/snapchat"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/text4"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/speech"
                    android:background="#00FFFFFF"
                    android:contentDescription="snapchat"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snapchat" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/speech"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="62dp"
                    android:text="Messages"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/snapchat"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/text5"
                    android:text="Snapchat"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/phone"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/text5"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:background="#00FFFFFF"
                    android:contentDescription="telephone"
                    android:scaleType="fitCenter"
                    android:src="@drawable/telephone" />

                <ImageButton
                    android:id="@+id/youtube"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/text6"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/phone"
                    android:background="#00FFFFFF"
                    android:contentDescription="youtube"
                    android:scaleType="fitCenter"
                    android:src="@drawable/youtube" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="82dp"
                    android:text="Phone"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/youtube"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/text7"
                    android:text="Youtube"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#BF6A5E5E">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            android:background="#00FFFFFF"
            android:contentDescription="back button"/>

        <ImageButton
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:layout_marginLeft="70dp"
            android:contentDescription="home button"
            android:background="#00FFFFFF"/>

        <ImageButton
            android:id="@+id/nav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/navigation"
            android:scaleType="fitCenter"
            android:contentDescription="nav button"
            android:background="#00FFFFFF"/>

    </LinearLayout>

</RelativeLayout>
